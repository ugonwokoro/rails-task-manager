<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
      <p><input <%= "type=checkbox name=#{@task[:id]}"%> checked> This task is completed</p>
    <% else %>
      <p><input <%= "type=checkbox name=#{@task[:id]}"%>> This task is not completed yet</p>
<% end %>
<%= link_to("Back to list", tasks_path)%>

